{
	"name": "panchobot",
	"version": "1.0.0",
	"description": "A peronal bot made by Pancho with special tournament modifications.",
	"main": "/src/main.ts",
	"scripts": {
		"start": "ts-node --require dotenv/config src/main.ts",
		"dev": "cross-env NODE_ENV=development nodemon --require dotenv/config src/main.ts",
		"commands:unregister": "ts-node --require dotenv/config scripts/unregisterGlobalCommands.ts",
		"lint": "eslint .  --ext .ts",
		"lint:fix": "eslint .  --ext .ts --fix"
	},
	"keywords": [],
	"author": "Francisco Hauva <phauva@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"@axiomhq/winston": "1.0.0-rc.1",
		"@paralleldrive/cuid2": "^2.2.2",
		"@prisma/client": "5.8.1",
		"discord.js": "^14.14.1",
		"typescript": "^5.3.3",
		"winston": "^3.11.0",
		"winston-daily-rotate-file": "^4.7.1"
	},
	"devDependencies": {
		"@types/node": "^20.11.10",
		"@types/pg": "^8.10.9",
		"cross-env": "^7.0.3",
		"dotenv": "^16.3.2",
		"eslint": "^8.56.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-n": "^16.6.2",
		"eslint-plugin-promise": "^6.1.1",
		"prettier": "^3.2.4",
		"prisma": "^5.8.1",
		"ts-node": "^10.9.2"
	},
	"prettier": {
		"useTabs": true
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"ignorePatterns": [
			"dist",
			"node_modules"
		],
		"rules": {
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			]
		}
	}
}
